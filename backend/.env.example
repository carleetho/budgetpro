# Database Configuration
# Copy this file to .env and update with your actual credentials
# NEVER commit .env to version control

# PostgreSQL Database Configuration
POSTGRES_DB=budgetpro
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# Database Connection (for Spring Boot application)
DB_URL=jdbc:postgresql://localhost:5432/budgetpro
DB_USERNAME=postgres
DB_PASSWORD=your-secure-password-here

# Database Port (optional, defaults to 5432)
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your-jwt-secret-minimum-32-characters-long
JWT_EXPIRATION_HOURS=24

# Resend API Key (for email notifications)
RESEND_API_KEY=your-resend-api-key-here

# Admin Email (for notifications)
ADMIN_EMAIL=admin@example.com
NOTIFICATION_SENDER=onboarding@resend.dev
